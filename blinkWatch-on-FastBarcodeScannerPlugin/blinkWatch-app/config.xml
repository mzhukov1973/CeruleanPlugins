<?xml version='1.0' encoding='utf-8'?>
<widget id="cw.swcore.ceruleanplugins-blinkwatchapp" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>blinkWatchApp</name>
    <description>
     A tester app for blinkWatch plugin from Cerulean Plugins suite.
    </description>
    <author email="mzhukov314154dev@gmail.com" href="">
     Maxim Zhukov
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <engine name="android" spec="latest" />
</widget>
