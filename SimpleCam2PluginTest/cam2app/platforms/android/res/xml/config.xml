<?xml version='1.0' encoding='utf-8'?>
<widget id="cw.plugins.cam2app" version="0.0.2-alpha1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Cam2Plug">
        <param name="android-package" value="cw.plugins.cam2plug.Cam2Plug" />
    </feature>
    <name>cam2app</name>
    <description>A simple app to test a simple camera2 cordova plugin (Cam2Plug).</description>
    <author email="mzhukov31415dev@gmail.com" href="https://github.com/mzhukov1973">Maxim Zhukov</author>
    <license>Apache-2.0</license>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="android-minSdkVersion" value="21" />
    <preference name="BackgroundColor" value="FFA0A0A0" />
    <preference name="Orientation" value="portrait" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <preference name="KeepRunning" value="true" />
    <preference name="ShowTitle" value="false" />
    <preference name="LogLevel" value="VERBOSE" />
    <preference name="LoadingDialog" value="The loading dialogue title,Loading dialogue - the message itself (first comma, separating title and message will be autoremoved when parsing this string)." />
</widget>
